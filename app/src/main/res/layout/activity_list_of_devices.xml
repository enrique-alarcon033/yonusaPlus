<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <include
        android:id="@+id/top_menu"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_height="?attr/actionBarSize"
        layout="@layout/yonusa_toolbar"/>


    <TextView
        android:id="@+id/tv_add_devices_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_add_devices"
        android:textAlignment="center"
        android:layout_below="@id/top_menu"
        android:layout_marginTop="18sp"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:textSize="21sp"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/iv_add_wifi"
        android:src="@drawable/wifi_device"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/tv_add_devices_list"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="18sp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/tv_wifi_list"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="@string/wifi_device"
        android:textAlignment="center"
        android:layout_toEndOf="@id/iv_add_wifi"
        android:layout_below="@id/tv_add_devices_list"
        android:layout_marginTop="18sp"
        android:gravity="center"
        android:textColor="@color/negro"
        android:textSize="21sp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/btn_to_wifi"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_below="@id/tv_add_devices_list"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16sp"
        android:background="@drawable/rounded_white"
        android:foreground="?attr/selectableItemBackground"
        />

    <ImageView
        android:id="@+id/iv_add_panel"
        android:src="@drawable/monitor_panel_device"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/iv_add_wifi"
        android:layout_marginStart="16dp"
        android:visibility="gone"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="18sp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/tv_monitor_list"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="@string/panel_device"
        android:textAlignment="center"
        android:visibility="gone"
        android:layout_toEndOf="@id/iv_add_wifi"
        android:layout_below="@id/tv_wifi_list"
        android:layout_marginTop="18sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="21sp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/btn_to_monitor"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_below="@id/tv_wifi_list"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16sp"
        android:visibility="gone"
        android:background="@drawable/rounded_white"
        android:foreground="?attr/selectableItemBackground"
        />


</RelativeLayout>