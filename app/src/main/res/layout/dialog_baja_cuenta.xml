<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rojo2"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:background="@color/rojo1"
                android:layout_height="120dp" />

            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="-75dp"
                android:background="@drawable/round_while"
                android:padding="20dp"
                android:orientation="vertical">

               <View
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:background="@drawable/round_while_1000"/>
                <ImageView
                    android:id="@+id/img_rating"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:padding="25dp"
                    android:src="@drawable/ic_cuidado"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/textView39"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eliminar cuenta"
                android:layout_gravity="center"
                android:textSize="23dp"
                android:textColor="@color/negro"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/textView40"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¡Advertencia! Has solicitado la eliminación de tu cuenta y todos los datos relacionados. Para detener el proceso de eliminación, inicia sesión dentro de los 7 días para reactivarla. "
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:paddingBottom="10dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:id="@+id/btnDespues"
                    android:text="Cancelar"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:textAllCaps="false"
                    android:visibility="visible"
                    android:paddingStart="20dp"
                    android:textColor="@color/white"
                    android:background="@drawable/round_rojo"
                    android:paddingEnd="20dp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/btn_eliminar_cuenta"
                    android:text="Eliminar Cuenta"
                    android:textAllCaps="false"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/negro"
                    android:background="@drawable/round_while"
                    android:layout_marginEnd="20dp"/>
            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>
</RelativeLayout>