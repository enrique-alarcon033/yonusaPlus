<?xml version="1.0" encoding="utf-8"?>
<Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/yonusa_toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/colorPrimary"
    android:elevation="4dp"
    app:contentInsetStartWithNavigation="0dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="16dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/logo_yonusa_blanco" />



        <ImageView
            android:id="@+id/iv_user_admin"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:elevation="5dp"
            android:src="@drawable/ic_add_user"
            android:layout_alignParentEnd="true"
            android:visibility="gone"
            android:foreground="?attr/selectableItemBackground"/>

        <ImageView
            android:id="@+id/iv_user_configuration"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="282dp"
            android:elevation="5dp"
            android:src="@drawable/ic_lista_user"
            android:layout_alignParentEnd="true"
            android:visibility="gone"
            android:foreground="?attr/selectableItemBackground"/>

        <ImageView
            android:id="@+id/iv_close_session"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:elevation="5dp"
            android:src="@drawable/ic_salida"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:foreground="?attr/selectableItemBackground"/>

        <ImageView
            android:id="@+id/iv_add_devices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:elevation="5dp"
            android:src="@drawable/add_device"
            android:layout_alignParentEnd="true"
            android:visibility="gone"
            android:foreground="?attr/selectableItemBackground"/>

        <Button
            android:id="@+id/navBarRightButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:elevation="5dp"
            android:layout_alignParentEnd="true"
            android:visibility="gone"
            android:background="@drawable/rounded_login_btn_shape"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:textColor="@color/colorPrimary"
            android:foreground="?attr/selectableItemBackground" />

        <Button
            android:id="@+id/navBarLeftButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:elevation="5dp"
            android:layout_alignParentStart="true"
            android:visibility="gone"
            android:background="@drawable/rounded_login_btn_shape"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:textColor="@color/colorPrimary"
            android:foreground="?attr/selectableItemBackground" />
    </RelativeLayout>
    
</Toolbar>